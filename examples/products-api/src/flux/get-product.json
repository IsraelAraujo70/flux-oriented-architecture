{
  "endpoint": "/products/:id",
  "method": "GET",
  "description": "Gets a product by ID",
  "flow": [
    {
      "type": "try",
      "try": [
        {
          "type": "action",
          "name": "product",
          "path": "product/getProduct",
          "args": {
            "id": "${input.id}"
          }
        },
        {
          "type": "return",
          "status": 200,
          "body": {
            "success": true,
            "data": "${product}"
          }
        }
      ],
      "catch": [
        {
          "type": "return",
          "status": 404,
          "body": {
            "success": false,
            "error": "Product not found"
          }
        }
      ],
      "errorVar": "error"
    }
  ]
}
