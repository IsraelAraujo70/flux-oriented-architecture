  "description": "Backend framework with declarative flow orchestration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "foa": "bin/foa.js",
    "create-foa-app": "bin/create-foa-app.js"
  },
  "files": [
    "dist",
    "bin",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "ts-node src/cli/index.ts",
