    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "picocolors": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/winston": "^2.4.4",
    "@types/glob": "^8.1.0",
    "jest": "^29.7.0",
